@model IEnumerable<Capstone.Models.OrderModel>

@{
    ViewBag.Title = "Index";
}

<h2>Order History</h2>


<table class="table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.orderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumBadge)
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.orderId)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NumBadge)
        </td>
        <td>
            @Html.ActionLink("View Order", "Edit", new { id=item.orderId }) |
            
        </td>
    </tr>
}

</table>
